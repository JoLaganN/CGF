<odoo>
    <data>


        <record model="ir.ui.view" id="cgf_students_list">
            <field name="name">cgf.students.list</field>
            <field name="model">cgf.students</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name_students_ids"/>
                </list>
            </field>
        </record>
        <record id="my_cgf_students_actions_window" model="ir.actions.act_window">
            <field name="name">cgf students</field>
            <field name="res_model">cgf.students</field>
            <field name="view_mode">kanban,list,form</field>
        </record>


        <record model="ir.ui.view" id="cgf_students_form">

            <field name="name">cgf.students.form</field>
            <field name="model">cgf.students</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name_students_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>

        </record>
<!--        <record id="action_students" model="ir.actions.server">-->
<!--            <field name="name">action students</field>-->
<!--            <field name="model_id" ref="model_cgf_students"/>-->
<!--            <field name="binding_model_id" ref="my_cgf.model_cgf_students"/>-->
<!--            <field name="state">code</field>-->
<!--            <field name="binding_view_types">list,form</field>-->
<!--            <field name="code">action = records.send_info_action()</field>-->
<!--                    <field name="context">{'default_active': True}</field>-->
<!--        </record>-->
        <record id="cgf_students_kanban" model="ir.ui.view">
            <field name="name">cgf.students.kanban</field>
            <field name="model">cgf.students</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="card" class="flex-row">

                            <aside class="o_kanban_aside_full">
                                <div class="o_kanban_image_fill position-relative w-100">
                                    <field name="student_avatar" alt="cover-image" class="h-100" widget="image"
                                           options="{'img_class': 'object-fit-cover'}"/>
                                </div>
                            </aside>
                            <main class="ps-2 ps-md-0">
                                <div class="mb-1">
                                    <field name="name_students_ids"/>
                                </div>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <menuitem id="cgf_menu_root" name="cgf_base" web_icon="Cgf_base,static/description/icon.png" sequence="1"/>
        <menuitem id="cgf_students_menu" name="students" parent="cgf_menu_root" sequence="2"
                  action="my_cgf_students_actions_window"/>

    </data>


</odoo>