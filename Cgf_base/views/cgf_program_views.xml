<odoo>
    <data>
        <record model="ir.ui.view" id="cgf_program_list">
            <field name="name">cgf.program.list</field>
            <field name="model">cgf.program</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="lessons_ids"/>
                    <field name="nb_hour_prog" readonly="1"/>
                </list>
            </field>
        </record>

        <record id="my_cgf_program_window" model="ir.actions.act_window">
            <field name="name">cgf config program</field>
            <field name="res_model">cgf.program</field>
            <field name="view_mode">list,form</field>
        </record>

        <record model="ir.ui.view" id="cgf_program_form">
            <field name="name">cgf.program.form</field>
            <field name="model">cgf.program</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="lessons_ids"  widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="nb_hour_prog" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>

        </record>


        <menuitem id="cgf_program_menu" name="program" parent="cgf_menu_root" sequence="9" action="my_cgf_program_window"/>
    </data>
</odoo>