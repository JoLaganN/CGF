<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="class_newspaper_comments_list_views" model="ir.ui.view">
            <field name="name">class_newspaper_comments_list_view</field>
            <field name="model">cgf.class_newspaper_comments</field>
            <field name="arch" type="xml">
                <list>
                    <field name="comments"/>
                    <field name="severity"/>
                    <field name="is_confirmed_by_parent"/>
                </list>
            </field>
        </record>

        <record id="class_newspaper_comments_form_views" model="ir.ui.view">
            <field name="name">class_newspaper_comments_form_view</field>
            <field name="model">cgf.class_newspaper_comments</field>
            <field name="arch" type="xml">
                <form>
<!--                    <header>-->
<!--                        <button name="action_send_mail" type="object" string="Send Email"/>-->
<!--                    </header>-->
                    <group>
                        <field name="comments"/>
                        <field name="severity"/>
                        <field name="is_confirmed_by_parent"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="open_class_newspaper_comments_views" model="ir.actions.act_window">
            <field name="name">Class Newspaper</field>
            <field name="res_model">cgf.class_newspaper_comments</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="class_newspaper_comments_list_views"/>
        </record>

        <menuitem
                id="class_newspaper_comments_menu"
                name="Comments"
                parent="class_newspaper_menu_root"
                action="open_class_newspaper_comments_views"
                sequence="2"/>

    </data>
</odoo>

